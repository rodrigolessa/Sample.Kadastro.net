@using Sample.MVCadastro_net.UI.Web.Extension
@model Sample.MVCadastro_net.UI.Web.ViewModels.PessoaViewModel

<table id="listaPessoas" width="100%" cellpadding="5" cellspacing="10">
    <tr>
        <th>
            Documento
        </th>
        <th>
            Nome
        </th>
        <th>
            Status
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.ListaPessoaFisica) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CPF.ToCPF())
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PessoaId }) |
            @Html.ActionLink("Details", "Details", new { id=item.PessoaId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PessoaId })
        </td>
    </tr>
}

@foreach (var item in Model.ListaPessoaJuridica) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CNPJ.ToCNPJ())
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PessoaId }) |
            @Html.ActionLink("Details", "Details", new { id=item.PessoaId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PessoaId })
        </td>
    </tr>
}

</table>
