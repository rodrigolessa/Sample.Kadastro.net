@model Sample.MVCadastro_net.UI.Web.ViewModels.PessoaViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    
    @Html.Hidden("URL_SALVAR", Url.Action("Salvar"))
    
    @Html.ValidationSummary(true)

    <fieldset>

        <legend>Cadastro de nova Pessoa</legend>

        <div class="editor-label">
            Tipo de Pessoa
        </div>
        <div class="editor-field">
            @Html.DropDownList("TipoPessoa", new SelectList(Model.ListaTipoPessoa, "ID", "Name", null), null, new { tabindex = "1" })
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Pessoa.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Pessoa.Nome)
            @Html.ValidationMessageFor(model => model.Pessoa.Nome)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Pessoa.Status)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Pessoa.Status)
            @Html.ValidationMessageFor(model => model.Pessoa.Status)
        </div>

        <div class="editor-label">
            Documento
        </div>
        <div class="editor-field">
            @Html.TextBox("Documento")
        </div>

        <p>
            <button id="btnSalvar">Salvar</button>
        </p>

    </fieldset>
    
    <fieldset>

        <legend>Pessoas Cadastradas</legend>

        <div>
            @Html.Partial("Grid", Model)
        </div>

    </fieldset>
    
}