@using System.Web.Optimization;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Teste de Cadastro</title>
    <style type="text/css">
        body {
            padding-top: 60px;
            padding-bottom: 40px;
        }
    </style>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/knockout")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @RenderSection("scripts", required: false)

</head>

<body>

    <!-- Menu Principal -->
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="#">Flowtime-net</a>
                <div class="nav-collapse collapse">
                    <p class="navbar-text pull-right">
                        Bem Vindo, <a href="#" class="navbar-link">@ViewBag.Usuario</a>
                    </p>
                    <ul class="nav">
                        <li class="active">
                            <a href="@Url.Action("Index")">Menu 1</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index")">Menu 2</a>
                        </li>
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>
    <!-- Menu Principal -->

    <div class="container-fluid" data-bind="visible: HasError">
        <div class="row-fluid>
            <div class="alert alert-error">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <h4><span data-bind="text: Titulo"></span></h4>
                <span data-bind="text: Mensagem"></span>
            </div>
        </div>
    </div>

    <!-- ?? TODO: Verificar -->
    @RenderSection("featured", required: false)
    @RenderBody()

    <footer>
        <p>&copy; 2013</p>
    </footer>

</body>
</html>
