@using System.Web.Optimization;

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Teste de Cadastro</title>
    <style type="text/css">
        body {
            padding-top: 60px;
            padding-bottom: 40px;
        }
    </style>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/knockout")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @RenderSection("scripts", required: false)

</head>
<body>

    <div class="container-fluid" data-bind="visible: HasSuccess">
        <div class="row-fluid">
                <div class="alert alert-success">                
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <h4><span data-bind="text: Titulo"></span></h4>
                <span data-bind="text: Mensagem"></span>
            </div>
        </div>
    </div>

    <div class="container-fluid" data-bind="visible: HasError">
        <div class="row-fluid">
                <div class="alert alert-error">                
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <h4><span data-bind="text: Titulo"></span></h4>
                <span data-bind="text: Mensagem"></span>
            </div>
        </div>
    </div>

    @RenderSection("featured", required: false)
    @RenderBody()

</body>
</html>
